<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trip_bg">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="4dp"
        android:src="@drawable/ic_chat"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:src="@drawable/ic_doonk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".16" />

    <ImageView
        android:id="@+id/icon_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:src="@drawable/ic_doonk_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".3"
        android:background="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/passajir"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/passajir_drawable"
        android:gravity="center"
        android:padding="8dp"
        android:text="Пассажир"
        android:textColor="@color/white"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/posilka"
        app:layout_constraintTop_toBottomOf="@id/icon_text" />

    <TextView
        android:id="@+id/posilka"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/posilka_drawable"
        android:gravity="center"
        android:padding="8dp"
        android:text="Посылка"
        android:textColor="#36A53F"
        app:layout_constraintLeft_toRightOf="@id/passajir"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon_text" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/posilka_drawable"
        app:layout_constraintTop_toBottomOf="@id/posilka" />

    <ImageView
        android:id="@+id/transferIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_trafig"
        app:layout_constraintBottom_toBottomOf="@id/back"
        app:layout_constraintRight_toRightOf="@id/back"
        app:layout_constraintTop_toTopOf="@id/back" />

    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="4dp"
        android:alpha=".1"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/transferIcon"
        app:layout_constraintLeft_toLeftOf="@id/back"
        app:layout_constraintRight_toLeftOf="@id/transferIcon"
        app:layout_constraintTop_toTopOf="@id/transferIcon" />

    <TextView
        android:id="@+id/whereBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center|left"
        android:paddingLeft="16dp"
        android:text="Откуда"
        app:layout_constraintBottom_toTopOf="@id/line"
        app:layout_constraintLeft_toLeftOf="@id/back"
        app:layout_constraintRight_toLeftOf="@id/transferIcon"
        app:layout_constraintTop_toTopOf="@id/back"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/whereEverBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center|left"
        android:paddingLeft="16dp"
        android:text="Куда"
        app:layout_constraintBottom_toBottomOf="@id/back"
        app:layout_constraintLeft_toLeftOf="@id/back"
        app:layout_constraintRight_toLeftOf="@id/transferIcon"
        app:layout_constraintTop_toBottomOf="@id/line"
        tools:ignore="RtlHardcoded" />

    <ImageView
        android:id="@+id/back2"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/posilka_drawable"
        app:layout_constraintTop_toBottomOf="@id/back" />

    <ImageView
        android:id="@+id/calendar_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_calendar"
        app:layout_constraintBottom_toBottomOf="@id/back2"
        app:layout_constraintHorizontal_bias=".42"
        app:layout_constraintLeft_toLeftOf="@id/back2"
        app:layout_constraintRight_toRightOf="@id/back2"
        app:layout_constraintTop_toTopOf="@id/back2"
        app:layout_constraintVertical_bias=".7" />

    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_account"
        app:layout_constraintBottom_toBottomOf="@id/back2"
        app:layout_constraintRight_toRightOf="@id/back2"
        app:layout_constraintTop_toTopOf="@id/back2"
        app:layout_constraintVertical_bias=".7" />

    <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Дата"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/back2"
        app:layout_constraintLeft_toLeftOf="@id/back2"
        app:layout_constraintTop_toTopOf="@id/back2"
        app:layout_constraintVertical_bias=".3" />

    <TextView
        android:id="@+id/dataText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="24 июня"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/back2"
        app:layout_constraintLeft_toLeftOf="@id/back2"
        app:layout_constraintTop_toTopOf="@id/back2"
        app:layout_constraintVertical_bias=".7" />

    <TextView
        android:id="@+id/passajirText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Пассажиры"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/back2"
        app:layout_constraintLeft_toRightOf="@id/calendar_icon"
        app:layout_constraintTop_toTopOf="@id/back2"
        app:layout_constraintVertical_bias=".3" />

    <TextView
        android:id="@+id/textPassajir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="1 взрослый"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/back2"
        app:layout_constraintLeft_toRightOf="@id/calendar_icon"
        app:layout_constraintTop_toTopOf="@id/back2"
        app:layout_constraintVertical_bias=".7" />

    <ImageView
        android:id="@+id/naytiBtn"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/passajir_drawable"
        app:layout_constraintTop_toBottomOf="@id/back2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Найти"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/naytiBtn"
        app:layout_constraintLeft_toLeftOf="@id/naytiBtn"
        app:layout_constraintRight_toRightOf="@id/naytiBtn"
        app:layout_constraintTop_toTopOf="@id/naytiBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>