<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/profile_page_atr_bg"
        app:layout_constraintBottom_toBottomOf="@id/text_lacetti"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_lacetti" />

    <ImageView
        android:id="@+id/lacetti"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_margin="25dp"
        android:background="@drawable/circle_green_bg"
        android:padding="8dp"
        android:src="@drawable/ic_lacetti"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_lacetti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:padding="15dp"
        android:text="@string/chevrolet_lacetti"
        android:textColor="@color/realBlack"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/lacetti"
        app:layout_constraintLeft_toRightOf="@id/lacetti"
        app:layout_constraintTop_toTopOf="@id/lacetti" />
</androidx.constraintlayout.widget.ConstraintLayout>